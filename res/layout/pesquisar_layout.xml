<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/color3">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" "
            android:id="@+id/textView_search"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.59"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/color5"
            />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/listView"
            android:layout_weight="0.41"
            android:fastScrollEnabled="false"
            android:choiceMode="singleChoice"
            android:background="@color/color5"
            android:footerDividersEnabled="false"
            android:dividerHeight="5dp"
            android:drawSelectorOnTop="false"
            android:fastScrollAlwaysVisible="false"
            android:divider="@color/color5">
        </ListView>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <!-- Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Anterior"
            android:textColor="@color/color5"
            android:id="@+id/buttonAnterior_search"
            android:background="@color/color1"
            android:layout_marginRight="5dp" / -->


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Responder"
            android:textColor="@color/color5"
            android:id="@+id/buttonOK_search"
            android:background="@color/color2"

            android:layout_weight="1.00"/>

        <!--

         Button
            style="?android:attr/buttonStyleSmalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Proximo"
            android:textColor="@color/color5"
            android:id="@+id/buttonProximo_search"
            android:background="@color/color1"
            android:layout_marginLeft="5dp"/ -->

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewNumEspecies_search"
        android:layout_gravity="right"
        android:layout_weight="0.30"
        android:textSize="15sp" />

</LinearLayout>